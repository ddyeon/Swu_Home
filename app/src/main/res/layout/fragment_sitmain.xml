<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/bg">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="80dp"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">


                <ImageButton
                    android:id="@+id/btnBell"
                    android:layout_width="40dp"
                    android:layout_height="150dp"
                    android:layout_marginRight="30dp"
                    android:layout_weight="1"
                    android:background="@drawable/border_grey"
                    android:scaleType="fitCenter"
                    android:src="@drawable/bell_icon" />

                <ImageButton
                    android:id="@+id/btnRoom"
                    android:layout_width="40dp"
                    android:layout_height="150dp"
                    android:layout_weight="1"
                    android:background="@drawable/border_grey"
                    android:scaleType="fitCenter"
                    android:src="@drawable/door_icon" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="초인종"
                    android:textAlignment="center"
                    android:layout_marginRight="15dp"
                    android:textSize="15dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="방 문"
                    android:textAlignment="center"
                    android:layout_marginLeft="15dp"
                    android:textSize="15dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                tools:layout_editor_absoluteX="8dp"
                tools:layout_editor_absoluteY="82dp"
                android:layout_marginTop="10dp">


                <ImageButton
                    android:id="@+id/btnFire"
                    android:layout_width="40dp"
                    android:layout_height="150dp"
                    android:layout_marginRight="30dp"
                    android:layout_weight="1"
                    android:background="@drawable/border_grey"
                    android:scaleType="fitCenter"
                    android:src="@drawable/fire_icon" />

                <ImageButton
                    android:id="@+id/btnLaundry"
                    android:layout_width="40dp"
                    android:layout_height="150dp"
                    android:layout_weight="1"
                    android:background="@drawable/border_grey"
                    android:scaleType="fitCenter"
                    android:src="@drawable/laundry_icon" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="화재"
                    android:textAlignment="center"
                    android:layout_marginRight="15dp"
                    android:textSize="15dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="세탁기"
                    android:textAlignment="center"
                    android:layout_marginLeft="15dp"
                    android:textSize="15dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                tools:layout_editor_absoluteX="8dp"
                tools:layout_editor_absoluteY="82dp"
                android:layout_marginTop="10dp">


                <ImageButton
                    android:id="@+id/btnBaby"
                    android:layout_width="135dp"
                    android:layout_height="150dp"
                    android:layout_gravity="center"
                    android:background="@drawable/border_grey"
                    android:scaleType="fitCenter"
                    android:src="@drawable/baby_icon" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="아기 울음소리"
                    android:textAlignment="center"
                    android:textSize="15dp" />



            </LinearLayout>
        </LinearLayout>

    </ScrollView>


</LinearLayout>

